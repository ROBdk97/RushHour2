<Window x:Class="RushHour2.Erfolg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RushHour2"
        mc:Ignorable="d"
        WindowStyle="ToolWindow"
        Title="Erfolg" Height="100" Width="250">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
            <TextBlock Text="Level Abgeschlossen!" TextAlignment="Center" VerticalAlignment="Center" Grid.Row="0"/>
            <TextBlock Text="{Binding Moves,StringFormat=Benötigte Moves: {0:0}}" TextAlignment="Center" VerticalAlignment="Center" Grid.Row="1"/>
            <Button Content="Weiter" Click="Button_Click" Grid.Row="2"/>
    </Grid>
</Window>
