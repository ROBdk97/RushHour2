<Window x:Class="RushHour2.UsernameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RushHour2"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Benutzername" Height="100" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="UsernameTextBox" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" Height="30" TextAlignment="Center" VerticalContentAlignment="Center" KeyDown="UsernameTextBox_KeyDown"/>
        <Button x:Name="UsernameButton" Content="Bestätigen" HorizontalAlignment="Center" VerticalAlignment="Center" Width="100" Height="30" Click="UsernameButton_Click" Grid.Row="1"/>
    </Grid>
</Window>
